<h1>Enter your new password</h1>

<% if (typeof message !== "undefined") { %>
  <div class="alert alert-danger" role="alert">
    <p><%= message %></p>
  </div>
<% } %>

<div>
  <form action="/forget-password/reset" method="POST">
    <div class="form-group">
      <label for="password">Password</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        placeholder="Create new password"
      />
      <small class="form-text text-muted">
        Your password must more than 8 characters long, contain lower characters, upper characters, special characters, and numbers, and must not contain spaces.
      </small>
    </div>
    <div class="form-group">
      <label for="check_password">Check Password</label>
      <input
        type="password"
        class="form-control"
        id="check_password"
        name="check_password"
        placeholder="Confirm your password"
      />
    </div>
    <small class="form-text text-muted">
      Your password must more than 8 characters long, contain lower characters, upper characters, special characters, and numbers, and must not contain spaces.
    </small>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
